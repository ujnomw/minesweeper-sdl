{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch C++ App",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/Sandbox",
      "args": [],
      "targetArchitecture": "arm64",
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "MIMode": "lldb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Break on C++ exceptions",
          "text": "breakpoint set -E c++ -O on"
        }
      ]
    }
  ]
}
